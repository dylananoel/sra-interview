<%= form_for(@rating, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @rating.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@rating.errors.count, "error") %> prohibited this rating from being saved:</h4>

      <ul>
      <% @rating.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group hidden">
    
      <%= f.label :post, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :post_id, class: "form-control" %>
      </div>
    
  </div>
  <div class="form-group">
    
      <%= f.label :stars, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.select :stars, [1,2,3,4,5], selected: 1, class: 'form-control' %>
      </div>
    
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
