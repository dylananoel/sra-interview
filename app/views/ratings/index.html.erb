<div class="page-header">
  <%= link_to new_rating_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Rating
  <% end %>
  <h1>Listing ratings</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Post</th>
            <th>Stars</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @ratings.each do |rating| %>
        <%= content_tag :tr, id: dom_id(rating), class: dom_class(rating) do %>
                      <td><%= rating.post %></td>
                      <td><%= rating.stars %></td>
                    <td><%= link_to 'Show', rating %></td>
          <td><%= link_to 'Edit', edit_rating_path(rating) %></td>
          <td><%= link_to 'Destroy', rating, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
